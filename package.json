{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "description": "SerCrow Search Engine - A full-stack application with React frontend and Express backend",
  "main": "dist/_worker.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx --watch server/index.ts",
    "dev:client": "vite --host",
    "dev:full": "concurrently \"npm run dev:client\" \"npm run dev\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "esbuild server/worker.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/_worker.js --external:pg --external:redis --external:ws",
    "start": "cross-env NODE_ENV=production node dist/_worker.js",
    "check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev:client\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build:client && electron-builder",
    "electron:dist": "npm run build:client && electron-builder --publish=never",
    "mobile:dev": "npm run build:client && npx cap sync && npx cap run android",
    "mobile:build": "npm run build:client && npx cap sync && npx cap build android",
    "mobile:sync": "npx cap sync",
    "mobile:open": "npx cap open android",
    "deploy:cloudflare": "npm run build && npx wrangler pages deploy dist",
    "clean": "rm -rf dist dist-electron node_modules/.cache"
  },
