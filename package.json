    "npm": ">=9.0.0"
  },
  "keywords": [
    "search-engine",
    "react",
    "express",
    "typescript",
    "electron",
    "capacitor",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mrjosephs1101/SerCrow.git"
  },
  "homepage": "https://github.com/mrjosephs1101/SerCrow#readme",
  "build": {
    "appId": "com.sercrow.searchengine",
    "productName": "SerCrow",
    "author": "MJOStudios Official",
    "copyright": "Copyright Â© 2024 MJOStudios Official",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server/",
        "to": "server/",
        "filter": ["**/*.js"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/20250620_150619_1750447628914.png",
      "target": [
        {
          "target": "default",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/20250620_150619_1750447628914.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/20250620_150619_1750447628914.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "capacitor": {
    "appId": "com.sercrow.searchengine",
    "appName": "SerCrow",
    "webDir": "dist",
    "bundledWebRuntime": false,
    "plugins": {
      "SplashScreen": {
        "launchShowDuration": 2000
      }
    }
  }
}